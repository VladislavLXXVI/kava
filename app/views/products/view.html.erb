<!-- app/views/products/views.html.erb -->

<h1><%= @product.name %></h1>
<p><%= @product.description %></p>
<p>Price: <%= number_to_currency(@product.price) %></p>

<% if @product.image.present? %>
  <%= image_tag url_for(@product.image), alt: "Product Image" %>
<% else %>
  <p>No image available</p>
<% end %>

<%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-warning' %>
<%= link_to 'Delete', @product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
<%= link_to 'Back to Products', products_path, class: 'btn btn-primary' %>
